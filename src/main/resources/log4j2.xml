<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
 
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
		<File name="FileAppender" fileName="C:\\simple-weather-mqtt-client\\simple-weather-mqtt-client.log">
      <PatternLayout pattern="%d %p %c [%t]| %msg%n"/>
    </File>
    </Appenders>
 
    <Loggers>
        <Logger name= "com.mqtt.ecomonitor.MQTT" level="debug" additivity="false">
           <AppenderRef ref="FileAppender"/>
     </Logger>
 
        <!-- Root Logger -->
        <Root level="all" >
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
	
</Configuration>